<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <!--ユーザーインフォ-->
      <%= render 'users/info', user: @user %>
    <!--投稿フォーム-->
      <%= render 'books/post', book: @book %>
    </div>

<!--User一覧-->
    <div class="col-lg-8 offset-lg-1">
      <h1>Users</h1>
        <table>
          <table class="table">
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="1"></th>
            </tr>
          </thead>

    <!--ここから下が可変-->
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td>
                  <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                </td>
                <td>
                  <%= user.name %>
                </td>
                <td>
                  <%= link_to "show", user_path(user.id)  %>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>
     </div>
   </div>
</div>