<!--ユーザーインフォ-->
<div>
  <%= render 'users/info', user: @user %>
</div>

<!--投稿フォーム-->
<div>
    <%= render 'books/post', book: @book %>
</div>

<!--book一覧-->
<div>
<h1>BOOKS</h1>
  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

    <!--ここから下が可変-->
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>

        <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>

        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
  </div>