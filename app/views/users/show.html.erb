<!--ユーザーインフォ-->
<h1>ユーザー</h1>
<div>
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %>
  <h3>name</h3>
  <h3><%= @user.name %></h3>
  <h3>introduction</h3>
  <h3><%= @user.introduction %></h3>
  <% if @user.id == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>

</div>

<!--投稿フォーム-->
<h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>

<!--book一覧-->
<div>
<h1>BOOKS</h1>
  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

    <!--ここから下が可変-->
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>

        <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>

        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
  </div>