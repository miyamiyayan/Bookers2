<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <h1>Editing Book</h1>
        <% if @book.errors.any? %>
          <%= @book.errors.count %>件のerrorが発生しました
            <% @book.errors.full_messages.each do |message| %>
              <%= message %>
            <% end %>
        <% end %>

<!-- form_with部分 -->
      <%= form_with model:@book, local: true do |f| %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </div>
        <%= f.submit 'Update Book', class: "btn btn-success" %>
        <% end %>

        <div>
          <%= link_to "Show", book_path(@book) %> | <a href="/books">Back</a>
        </div>

    </div>
  </div>
</div>