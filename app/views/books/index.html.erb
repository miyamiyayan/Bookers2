<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<!--ユーザーインフォ-->
<h1>ユーザー</h1>

<!--投稿フォーム-->
<h1>New book</h1>
  <%= form_with model:@book, local:true do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Create Book' %>
<% end %>

<!--book一覧-->
<div>
<h1>BOOKS</h1>
  <table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Body</th>
      </tr>
    </thead>

    <!--ここから下が可変-->
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, format: 'jpeg', fallback: "no_image.jpg" %></td>

        <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
        </td>

        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>

  </table>
  </div>