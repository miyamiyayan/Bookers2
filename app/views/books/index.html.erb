<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-lg-3">
    <!--ユーザーインフォ-->
      <%= render 'users/info', user: @user %>
    <!--投稿フォーム-->
      <%= render 'books/post', book: @book %>
    </div>


<!--全体のbook一覧-->
    <div class="col-lg-8 offset-lg-1">
      <h1>BOOKS</h1>
        <table class="table">
          <thead>
            <tr>
              <th colspan="1"></th>
              <th>Title</th>
              <th>Body</th>
            </tr>
          </thead>

    <!--ここから下が可変-->
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill,  40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
                  <% end %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>